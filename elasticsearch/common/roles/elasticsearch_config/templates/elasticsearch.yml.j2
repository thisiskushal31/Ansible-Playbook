# Elasticsearch {{ es_version }} - generated by Ansible
cluster.name: {{ es_cluster_name }}
node.name: {{ es_node_name_prefix }}-{{ inventory_hostname_short }}

path.data: {{ es_data_dir }}
path.logs: {{ es_log_dir }}

network.host: "{{ ansible_default_ipv4.address }}"
http.port: {{ es_http_port }}
transport.port: {{ es_transport_port }}

{% if es_node_roles | length > 0 %}
node.roles: [ {{ es_node_roles | join(', ') }} ]
{% else %}
# Coordinating-only (client) node: no data, master, or ingest roles
node.roles: [ ]
{% endif %}

# Discovery: seed hosts for finding the cluster (master-eligible nodes)
discovery.seed_hosts: [ "{{ es_discovery_seed_hosts | default([]) | join('", "') }}" ]
{% if es_initial_master_nodes is defined and es_initial_master_nodes | default([]) | length > 0 %}
# Initial bootstrap: node names (same as node.name) of master-eligible nodes
cluster.initial_master_nodes: [ "{{ es_initial_master_nodes | default([]) | join('", "') }}" ]
{% endif %}
